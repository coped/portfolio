    "bowser": "^2.11.0",
    "bulma": "^0.9.2",
    "faker": "^5.5.3",
    "lodash": "^4.17.21",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-scripts": "^5.0.1",
    "uuid": "^8.3.2"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "serve": "npm run build && npx serve -s build",
